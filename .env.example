# Discord Bot Token (Required)
DISCORD_TOKEN=your_bot_token_here

# Bot Configuration
COMMAND_PREFIX=!
MAX_SESSIONS=10

# Rate Limits (DO NOT CHANGE unless you know what you're doing)
UPDATE_RATE=1.0  # 1 FPS to respect Discord rate limits
MESSAGE_RATE_LIMIT=1.0  # 1 message per second
REACTION_RATE_LIMIT=0.25  # 250ms between reactions

# Display Settings
DISPLAY_WIDTH=60
DISPLAY_HEIGHT=40

# Game Settings
SAVE_DIRECTORY=assets/saves
INACTIVE_TIMEOUT=300  # 5 minutes until session timeout

# Debug Mode (Optional)
DEBUG=false
